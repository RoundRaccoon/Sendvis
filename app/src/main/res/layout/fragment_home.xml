<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Dragos Badea"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_wallet_balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet Balance: lei "
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_wallet_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50.00"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_topup"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_button_background"
                            android:gravity="center"
                            android:text="âž•"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Top up" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_transfers"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_button_background"
                            android:gravity="center"
                            android:text="âž¡"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Transfer" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_pay_vendor"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/round_button_background"
                            android:gravity="center"
                            android:text="ðŸ’¸"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Pay vendor" />
                    </LinearLayout>

                    <!--   <Button
                           android:id="@+id/btn_topup"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_marginHorizontal="2dp"
                           android:layout_weight="1"
                           android:text="Topup"
                           android:shape="oval"/>-->

                    <!--                    <Button-->
                    <!--                        android:id="@+id/btn_transfers"-->
                    <!--                        android:layout_width="0dp"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginHorizontal="2dp"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        android:text="Transfer"-->
                    <!--                        android:shape="oval"/>-->

                    <!--                    <Button-->
                    <!--                        android:id="@+id/btn_pay_vendor"-->
                    <!--                        android:layout_width="0dp"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginHorizontal="2dp"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        android:text="Pay Vendor"-->
                    <!--                        android:shape="oval"/>-->

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Promos"
            android:textSize="20sp"
            android:textStyle="bold" />

        <include layout="@layout/card_oferta_ongoing" />

        <include
            android:id="@+id/card_home_0"
            layout="@layout/card_oferta_limited_time" />

        <Button
            android:id="@+id/btn_see_all_offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="See all promos" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Campus leaderboard"
            android:textSize="20sp"
            android:textStyle="bold" />

        <include
            android:id="@+id/card_home_1"
            layout="@layout/card_leaderboard" />

        <include
            android:id="@+id/card_home_2"
            layout="@layout/card_leaderboard" />

        <include
            android:id="@+id/card_home_3"
            layout="@layout/card_leaderboard" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:contentDescription="underline"
            android:layerType="software"
            android:src="@drawable/dottedline" />

        <include
            android:id="@+id/card_home_4"
            layout="@layout/card_leaderboard" />

        <Button
            android:id="@+id/btn_see_all_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="See leaderboard" />

    </LinearLayout>

</ScrollView>
